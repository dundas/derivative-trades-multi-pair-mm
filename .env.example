# Kraken API Credentials
KRAKEN_API_KEY=your-kraken-api-key
KRAKEN_API_SECRET=your-kraken-api-secret

# Database Configuration
DATABASE_URL=postgresql://username:password@host:5432/database
DO_REDIS_URL=redis://:password@host:6379

# Trading Configuration
TRADING_MODE=live  # or paper
MAX_POSITION_SIZE_USD=1000
PER_TRADE_RISK_PERCENT=2
MIN_SPREAD_BPS=5
MIN_VOLUME_24H_USD=100000

# Pair Selection
MAX_ACTIVE_PAIRS=10
PAIR_ROTATION_INTERVAL_HOURS=24
ENABLE_FUTURES=true
ENABLE_SPOT=true

# Risk Management
MAX_DAILY_LOSS_USD=500
MAX_CONCURRENT_ORDERS=20
ORDER_TIMEOUT_SECONDS=300

# Logging
LOG_LEVEL=info
NODE_ENV=development

# Session Management
SESSION_ID=multi-pair-mm-session

# Exchange Settings
KRAKEN_WS_URL=wss://ws.kraken.com
KRAKEN_REST_BASE_URL=https://api.kraken.com

# Performance Optimization
ENABLE_TEMPORAL_ANALYSIS=true
ENABLE_VOLUME_OPTIMIZATION=true
ENABLE_FEE_AWARE_EXIT=true

# Monitoring
SLACK_WEBHOOK_URL=your-slack-webhook-url
ENABLE_METRICS=true
